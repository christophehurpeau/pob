{
  "extends": [
    "config:js-lib"
  ],
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "semanticCommitType": "chore"
    },
    {
      "depTypeList": ["dependencies"],
      "semanticCommitType": "fix"
    },
    {
      "paths": ["packages/pob-dependencies"],
      "depTypeList": ["devDependencies"],
      "semanticCommitType": "feat"
    },
    {
      "updateTypes": [
        "patch",
        "minor"
      ],
      "labels": [
        ":ok_hand: code/approved",
        ":soon: automerge"
      ]
    }
  ]
}
