{
  "extends": ["config:js-lib"],
  "prConcurrentLimit": 10,
  "dependencyDashboard": true,
  "dependencyDashboardApproval": false,
  "postUpdateOptions": ["yarnDedupeFewer", "yarnDedupeHighest"],
  "labels": [":vertical_traffic_light: automerge"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "semanticCommitType": "chore",
      "matchPackageNames": ["*"]
    },
    {
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["patch"],
      "semanticCommitType": "fix"
    },
    {
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor", "major"],
      "semanticCommitType": "feat"
    },
    {
      "matchFileNames": ["packages/pob-dependencies"],
      "matchDepTypes": ["devDependencies"],
      "semanticCommitType": "feat"
    },
    {
      "groupName": "react",
      "description": "react monorepo",
      "matchPackageNames": [
        "@hot-loader/react-dom",
        "@types/react",
        "@types/react-dom"
      ],
      "matchSourceUrls": ["https://github.com/facebook/react{/,}**"]
    },
    {
      "groupName": "nightingale",
      "description": "nightingale monorepo",
      "matchSourceUrls": [
        "https://github.com/christophehurpeau/nightingale{/,}**"
      ]
    },
    {
      "groupName": "alp",
      "description": "alp monorepo",
      "matchSourceUrls": ["https://github.com/christophehurpeau/alp{/,}**"]
    },
    {
      "groupName": "liwi",
      "description": "liwi monorepo",
      "matchSourceUrls": ["https://github.com/liwijs/liwi{/,}**"]
    },
    {
      "groupName": "@pob/eslint-config",
      "description": "@pob eslint configs",
      "matchPackageNames": ["/^@pob/eslint-config/"]
    },
    {
      "groupName": "yeoman group",
      "matchPackageNames": ["yeoman-*", "@yeoman/*"]
    },
    {
      "matchUpdateTypes": ["patch", "minor"],
      "labels": [
        ":ok_hand: code/approved",
        ":vertical_traffic_light: automerge"
      ]
    },
    {
      "matchUpdateTypes": ["pin"],
      "labels": [
        ":ok_hand: code/approved",
        ":vertical_traffic_light: automerge"
      ],
      "schedule": ["at any time"]
    },
    {
      "groupName": "conventional changelog",
      "description": "conventional-changelog monorepo",
      "matchSourceUrls": [
        "https://github.com/conventional-changelog/conventional-changelog{/,}**"
      ]
    }
  ]
}
