{
  "extends": [
    "@pob/root/tsconfigs/base.json",
    "@pob/root/tsconfigs/targets/node-18.json"
  ],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
<% if (composite) { -%>
    "composite": true,
    "tsBuildInfoFile": "node_modules/.cache/tsc/tsbuildinfo",
<% } -%>
    "noEmit": true
  },
  "include": ["<%= srcDirectory %>/**/*.js"]
}
