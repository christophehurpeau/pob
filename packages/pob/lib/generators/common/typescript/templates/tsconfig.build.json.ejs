{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsbuildinfo",
    "isolatedModules": false,
    "declaration": true,
    "declarationMap": true
  },

  "exclude": [
    "dist/**",
    "src/**/*.test.ts",
    <%- withReact ? '"src/**/*.test.tsx",' : '' %>
    "src/**/__tests__/**"
  ]
}
