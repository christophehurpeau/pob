{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "dist",
<% if(composite) { -%>
    "tsBuildInfoFile": "dist/tsbuildinfo",
<% } -%>
    "isolatedModules": false,
    "declaration": true,
    "declarationMap": true
  },

  "exclude": [
    "dist/**",
    "src/**/*.test.ts",
<% if(withReact) { -%>
    "src/**/*.test.tsx",
<% } -%>
    "src/**/__tests__/**"
  ]
}
