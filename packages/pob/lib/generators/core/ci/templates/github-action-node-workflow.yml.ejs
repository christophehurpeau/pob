name: Node CI

on: [push]

jobs:
  build:
    runs-on: ubuntu-latest

    strategy:
      matrix:
        node-version: [<% if (supportsNode14) { -%>14.x, <% } -%>16.x]

    steps:
      - uses: actions/checkout@v2

      - name: Use Node.js ${{ matrix.node-version }}
        uses: actions/setup-node@v2
        with:
          node-version: ${{ matrix.node-version }}

<% if (packageManager !== 'npm') { -%>
      - name: Cache dependencies
        uses: actions/cache@v2
        with:
<% if (packageManager === 'yarn') { -%>
          path: |
            .yarn/unplugged
            .yarn/install-state.gz
<% } else { -%>
          path: node_modules
<% } -%>
          key: v2-dependencies--${{ matrix.node-version }}-${{ runner.OS }}-${{ hashFiles('yarn.lock') }}
          restore-keys: |
            v2-dependencies--${{ matrix.node-version }}-${{ runner.OS }}-
            v2-dependencies--${{ matrix.node-version }}-

<% } -%>
<% if (packageManager === 'yarn') { -%>
      - name: Check Dependencies
        run: yarn install --immutable --immutable-cache
<% } else if (packageManager === 'npm') { -%>
      - name: Install Latest Npm
        run: npm install -g npm@next-7

      - name: Install Dependencies
        run: npm ci
<% } else { -%>
      - name: Install Dependencies
        run: yarn install --prefer-offline --pure-lockfile
<% } -%>

<% if (checks) { -%>
      - name: Checks
        run: <%= packageManager %> run checks

<% } -%>
<% if (build) { -%>
      - name: Build
        run: yarn run build
        if: startsWith(matrix.node-version, '16.')

<% } -%>
      - name: Prettier
        run: <%= packageManager %> run lint:prettier
        if: startsWith(matrix.node-version, '16.')
<% if (typescript) { -%>

      - name: Typescript
        run: yarn run tsc
        if: startsWith(matrix.node-version, '16.')
<% } -%>

      - name: Eslint
        run: <%= packageManager %> run lint:eslint
        if: startsWith(matrix.node-version, '16.')
<% if (codecov) { -%>

      - name: Generate Test Coverage
        run: <%= packageManager %> run test --coverage --coverageReporters=json --coverageReporters=text
        if: startsWith(matrix.node-version, '16.')
        env:
          CI: true

      - name: Send results to codecov
        uses: codecov/codecov-action@v2
        with:
          token: ${{ secrets.CODECOV_TOKEN }}
        if: startsWith(matrix.node-version, '16.')
<% } else if (testing) { -%>

      - name: Test
        run: <%= packageManager %> run test
        env:
          CI: true
<% } -%>
<% if (true) { -%>

      - name: Check nothing was forgotten before commit
        if: startsWith(matrix.node-version, '16.')
        run: <%= packageManager === 'npm' ? 'npx' : 'yarn run' %> repository-check-dirty
<% } -%>
