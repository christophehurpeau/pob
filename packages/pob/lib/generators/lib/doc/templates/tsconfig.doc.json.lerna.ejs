{
  "include": [
<% workspaces.forEach((workspace, i) => { -%>
    "packages/*/src/**/*.ts<%= jsx ? 'x?' : '' %>"<% if (i + 1 !== workspaces.length) { %>,<% } -%>
<% }) %>
  ],

  "exclude": [
    "**/node_modules/**",
    "**/src/**/*.test.ts<%= jsx ? 'x?' : '' %>",
    "**/src/**/__tests__/**"
  ],

  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true
  },

  "references": [
<% packagePaths.forEach((packagePath, index) => { -%>
    { "path": "<%= packagePath %>/tsconfig.build.json" }<%= index === packagePaths.length -1 ? '' : ',' %>
<% }) -%>
  ],

  "typedocOptions": {
<% /* if (packageManager === 'yarn') { -% >
    "theme": ".yarn/unplugged/typedoc-neo-theme-npm-1.0.10-ef449bda35/node_modules/typedoc-neo-theme/bin/default",
< % } else { -% >
    "theme": "./node_modules/typedoc-neo-theme/bin/default",
< % } */ -%>
    "entryPoints": [
      <%- entryPoints.map(entryPoint => `"${entryPoint}"`).join(', ') %>
    ],
    "exclude": [
      "**/*.test.ts<%= jsx ? 'x?' : '' %>",
      "**/__tests__/**"
    ],
<% /*
    "links": [
      {
        "label": "GitHub",
        "url": "< %- repositoryUrl % >/nightingale"
      }
    ],
    "source": [
      {
        "path": "< %- repositoryUrl % >/tree/master/packages/",
        "line": "L"
      }
    ],
*/ -%>
    "readme": "<%= readme %>",
    "out": "docs",
    "excludePrivate": true,
    "gitRevision": "master"
  }
}
