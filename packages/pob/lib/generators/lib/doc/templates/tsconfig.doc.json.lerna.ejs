{
  "include": [
<% workspaces.forEach((workspace, i) => { -%>
    "packages/*/src/**/*.ts<%= jsx ? 'x?' : '' %>"<% if (i + 1 !== workspaces.length) { %>,<% } -%>
<% }) %>
  ],

  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true
  },

  "typedocOptions": {
<% /* if (useYarn2) { -% >
    "theme": ".yarn/unplugged/typedoc-neo-theme-npm-1.0.10-ef449bda35/node_modules/typedoc-neo-theme/bin/default",
< % } else { -% >
    "theme": "./node_modules/typedoc-neo-theme/bin/default",
< % } */ -%>
    "plugin": [<% /* "typedoc-neo-theme", */ %>"@chrp/typedoc-plugin-lerna-packages"],
    "lernaExclude": [
      <%- packageNames.filter(n => n.endsWith('-example')).map(n => n.startsWith('@') ? `"${n}"` : `"packages/${n}"`).join(', ') %>
    ],
<% /*
    "links": [
      {
        "label": "GitHub",
        "url": "< %- repositoryUrl % >/nightingale"
      }
    ],
    "source": [
      {
        "path": "< %- repositoryUrl % >/tree/master/packages/",
        "line": "L"
      }
    ],
*/ -%>
    "readme": "README.md",
    "mode": "modules",
    "out": "docs",
    "excludePrivate": true,
    "excludeNotExported": false,
    "preserveConstEnums": true,
    "gitRevision": "master"
  },

  "exclude": [
    "**/node_modules/**",
    "**/src/**/*.test.ts",
    "**/src/**/__tests__/**"
  ]
}
