{
  "name": "pob",
  "version": "29.3.1",
  "description": "Pile of bones, library generator with git/babel/typescript/typedoc/readme/jest",
  "keywords": [
    "skeleton"
  ],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/christophehurpeau/pob.git",
    "directory": "packages/pob"
  },
  "homepage": "https://github.com/christophehurpeau/pob",
  "bugs": {
    "url": "https://github.com/christophehurpeau/pob/issues"
  },
  "type": "module",
  "engines": {
    "node": ">=22.18.0"
  },
  "sideEffects": false,
  "bin": "./lib/pob.js",
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "bin"
  ],
  "scripts": {
    "build": "yarn run build:definitions",
    "build:definitions": "tsc -p tsconfig.json",
    "format": "prettier --write",
    "lint": "yarn run lint:eslint",
    "lint:eslint": "yarn ../.. run eslint --quiet packages/pob"
  },
  "pob": {
    "typescript": "check-only"
  },
  "prettier": "@pob/root/prettier-config",
  "dependencies": {
    "@pob/eslint-config": "62.0.0",
    "@pob/eslint-config-typescript": "62.0.0",
    "@pob/eslint-config-typescript-react": "62.0.0",
    "@pob/sort-object": "10.1.0",
    "@pob/sort-pkg": "12.1.0",
    "@prettier/sync": "0.6.1",
    "@types/inquirer": "9.0.9",
    "@yarnpkg/cli": "4.10.3",
    "@yarnpkg/core": "4.4.4",
    "@yarnpkg/fslib": "3.1.3",
    "@yeoman/adapter": "3.1.0",
    "@yeoman/types": "1.8.0",
    "eslint": "9.37.0",
    "findup-sync": "^5.0.0",
    "git-remote-url": "^1.0.1",
    "github-username": "^9.0.0",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3",
    "lodash.camelcase": "^4.3.0",
    "lodash.kebabcase": "^4.1.1",
    "mem-fs": "4.1.2",
    "mem-fs-editor": "11.1.4",
    "minimist": "1.2.8",
    "parse-author": "2.0.0",
    "pob-dependencies": "workspace:*",
    "prettier": "3.6.2",
    "semver": "7.7.3",
    "typescript": "5.9.3",
    "validate-npm-package-name": "^6.0.2",
    "yarn-workspace-utils": "9.3.1",
    "yeoman-environment": "5.0.0",
    "yeoman-generator": "7.5.1"
  },
  "devDependencies": {
    "@pob/root": "19.3.1",
    "@types/node": "22.18.10"
  }
}
