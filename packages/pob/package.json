{
  "name": "pob",
  "version": "28.0.0",
  "description": "Pile of bones, library generator with git/babel/typescript/typedoc/readme/jest",
  "keywords": [
    "skeleton"
  ],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/christophehurpeau/pob.git",
    "directory": "packages/pob"
  },
  "homepage": "https://github.com/christophehurpeau/pob",
  "bugs": {
    "url": "https://github.com/christophehurpeau/pob/issues"
  },
  "type": "module",
  "engines": {
    "node": ">=22.14.0"
  },
  "sideEffects": false,
  "bin": "./lib/pob.js",
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "bin"
  ],
  "scripts": {
    "build": "yarn run build:definitions",
    "build:definitions": "tsc -p tsconfig.json",
    "format": "prettier --write",
    "lint": "yarn run lint:eslint",
    "lint:eslint": "yarn ../.. run eslint --quiet packages/pob"
  },
  "pob": {
    "typescript": "check-only"
  },
  "prettier": "@pob/root/prettier-config",
  "dependencies": {
    "@pob/eslint-config": "60.0.0",
    "@pob/eslint-config-typescript": "60.0.0",
    "@pob/eslint-config-typescript-react": "60.0.0",
    "@pob/sort-object": "9.0.2",
    "@pob/sort-pkg": "11.0.3",
    "@prettier/sync": "0.5.5",
    "@types/inquirer": "9.0.7",
    "@yarnpkg/cli": "4.9.1",
    "@yarnpkg/core": "4.4.1",
    "@yarnpkg/fslib": "3.1.2",
    "@yeoman/types": "1.5.0",
    "eslint": "9.25.1",
    "findup-sync": "^5.0.0",
    "git-remote-url": "^1.0.1",
    "github-username": "^9.0.0",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3",
    "lodash.camelcase": "^4.3.0",
    "lodash.kebabcase": "^4.1.1",
    "mem-fs": "4.1.2",
    "mem-fs-editor": "11.1.4",
    "minimist": "1.2.8",
    "parse-author": "2.0.0",
    "pob-dependencies": "workspace:*",
    "prettier": "3.5.3",
    "semver": "7.7.1",
    "typescript": "5.8.3",
    "validate-npm-package-name": "^6.0.0",
    "yarn-workspace-utils": "8.6.0",
    "yeoman-environment": "4.4.3",
    "yeoman-generator": "7.5.1"
  },
  "devDependencies": {
    "@pob/root": "18.0.0",
    "@types/node": "22.15.2"
  }
}
