{
  "name": "@pob/renovate-config",
  "version": "1.2.0",
  "description": "renovate pob config",
  "engines": {
    "node": ">= 8.3.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "preversion": "node ./generate-package.json.js && git add package.json"
  },
  "devDependencies": {
    "prettier": "1.18.2"
  },
  "renovate-config": {
    "default": {
      "postUpdateOptions": ["yarnDedupeHighest"],
      "prBodyNotes": [
        "<!-- do not edit after this -->This will be auto filled by reviewflow.<!-- end - don't add anything after this -->"
      ],
      "labels": [":soon: automerge"],
      "packageRules": [
        {
          "groupName": "Pob Dependencies",
          "packageNames": [
            "@babel/core",
            "@babel/preset-env",
            "@babel/preset-react",
            "@commitlint/cli",
            "@commitlint/config-conventional",
            "@pob/eslint-config",
            "@pob/eslint-config-babel",
            "@pob/eslint-config-babel-node",
            "@pob/eslint-config-node",
            "@pob/eslint-config-react",
            "@pob/eslint-config-typescript",
            "@pob/eslint-config-typescript-react",
            "@types/jest",
            "@typescript-eslint/eslint-plugin",
            "@typescript-eslint/parser",
            "babel-eslint",
            "babel-jest",
            "babel-preset-latest-node",
            "babel-preset-modern-browsers",
            "eslint",
            "husky",
            "jest",
            "jest-junit-reporter",
            "lerna",
            "lint-staged",
            "pob-babel",
            "pob-lcov-reporter",
            "pob-release",
            "prettier",
            "repository-check-dirty",
            "typedoc",
            "typescript",
            "yarn-update-lock",
            "yarnhook"
          ],
          "schedule": ["before 3am on Friday"]
        },
        {
          "description": "@pob eslint configs",
          "packagePatterns": ["^@pob/eslint-config"]
        },
        {
          "updateTypes": ["pin"],
          "labels": [":ok_hand: code/approved", ":soon: automerge"],
          "schedule": ["at any time"]
        }
      ]
    }
  }
}
