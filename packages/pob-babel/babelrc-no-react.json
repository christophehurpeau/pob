            "plugins": [
                ["defines", { "PRODUCTION": true, "BROWSER": true, "SERVER": false }],
                "remove-dead-code",
                ["discard-module-references", { "targets": [] }]
            ]
        },
        "webpack-modern-browsers-dev": {
            "presets": ["modern-browsers/webpack", "flow", "modern-browsers/stage1"],
            "plugins": [
                "typecheck",
                ["defines", { "PRODUCTION": true, "BROWSER": true, "SERVER": false }],
                "remove-dead-code",
                ["discard-module-references", { "targets": [] }]
            ]
        }
    }
}
