{
    "env": {
        "doc": {
            "presets": ["es2015", "flow", "stage-1"],
            "plugins": ["add-jsdoc-annotations"]
        },
        "es5": {
            "presets": ["es2015", "flow", "stage-1"],
            "plugins": [
                ["defines", { "PRODUCTION": true, "BROWSER": false, "SERVER": true }],
                "remove-dead-code",
                ["discard-module-references", { "targets": [] }]
            ]
        },
        "es5-dev": {
            "presets": ["es2015", "flow", "stage-1"],
            "plugins": [
                "typecheck",
                ["defines", { "PRODUCTION": false, "BROWSER": false, "SERVER": true }],
                "remove-dead-code",
                ["discard-module-references", { "targets": [] }]
            ]
        },
        "node5": {
            "presets": ["es2015-node5", "flow", "stage-1"],
            "plugins": [
                ["defines", { "PRODUCTION": true, "BROWSER": false, "SERVER": true }],
                "remove-dead-code",
                ["discard-module-references", { "targets": [] }]
            ]
        },
        "node5-dev": {
            "presets": ["es2015-node5", "flow", "stage-1"],
            "plugins": [
                "typecheck",
                ["defines", { "PRODUCTION": false, "BROWSER": false, "SERVER": true }],
                "remove-dead-code",
                ["discard-module-references", { "targets": [] }]
            ]
        },
        "node6": {
            "presets": ["es2015-node6/object-rest", "flow", "stage-1"],
            "plugins": [
                ["defines", { "PRODUCTION": true, "BROWSER": false, "SERVER": true }],
                "remove-dead-code",
                ["discard-module-references", { "targets": [] }]
            ]
        },
        "node6-dev": {
            "presets": ["es2015-node6/object-rest", "flow", "stage-1"],
            "plugins": [
                "typecheck",
                ["defines", { "PRODUCTION": false, "BROWSER": false, "SERVER": true }],
                "remove-dead-code",
                ["discard-module-references", { "targets": [] }]
