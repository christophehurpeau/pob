{
  "root": true,
  "extends": ["@pob/eslint-config", "@pob/eslint-config-node"],
  "ignorePatterns": ["*.d.ts"],
  "overrides": [
    {
      "files": ["**/*.test.js", "__tests__/**/*.js"],
      "env": {
        "jest": true
      },
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true
          }
        ]
      }
    }
  ]
}
