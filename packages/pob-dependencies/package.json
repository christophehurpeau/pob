{
  "name": "pob-dependencies",
  "version": "8.7.1",
  "description": "easier dependencies upgrade with a real package.json",
  "keywords": [],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/christophehurpeau/pob.git",
    "directory": "packages/pob-dependencies"
  },
  "homepage": "https://github.com/christophehurpeau/pob",
  "type": "module",
  "engines": {
    "node": ">=18.12.0"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "yarn run build:definitions",
    "build:definitions": "tsc --lib esnext --noEmit --skipLibCheck ./lib/index.d.ts",
    "clean:build": "true",
    "lint": "yarn run lint:eslint",
    "lint:eslint": "yarn ../.. run eslint --report-unused-disable-directives --resolve-plugins-relative-to . --quiet packages/pob-dependencies",
    "preversion": "node ./scripts/update-peerdeps.js && node ./scripts/generate.d.ts.js && git add lib/index.d.ts"
  },
  "prettier": "@pob/root/prettier-config",
  "pob": {},
  "devDependencies": {
    "@babel/core": "7.23.2",
    "@babel/preset-env": "7.23.2",
    "@babel/preset-react": "7.22.15",
    "@babel/runtime": "7.23.2",
    "@pob/commitlint-config": "6.0.2",
    "@pob/eslint-config": "51.1.2",
    "@pob/eslint-config-typescript": "51.1.2",
    "@pob/eslint-config-typescript-react": "51.1.2",
    "@pob/lerna-light": "8.0.1",
    "@pob/pretty-pkg": "6.1.1",
    "@types/jest": "29.5.7",
    "alp-rollup-plugin-config": "2.1.0",
    "check-package-dependencies": "6.8.0",
    "eslint": "8.52.0",
    "jest": "29.7.0",
    "jest-junit-reporter": "1.1.0",
    "pob-babel": "36.4.4",
    "prettier": "2.8.8",
    "repository-check-dirty": "6.1.1",
    "rollup": "4.3.0",
    "semver": "7.5.4",
    "typedoc": "0.25.2",
    "typescript": "5.2.2"
  }
}
