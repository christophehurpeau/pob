{
  "name": "pob-dependencies",
  "version": "17.6.0",
  "description": "easier dependencies upgrade with a real package.json",
  "keywords": [],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/christophehurpeau/pob.git",
    "directory": "packages/pob-dependencies"
  },
  "homepage": "https://github.com/christophehurpeau/pob",
  "type": "module",
  "engines": {
    "node": ">=20.9.0"
  },
  "sideEffects": false,
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "yarn run build:definitions",
    "build:definitions": "tsc --lib esnext --noEmit --skipLibCheck ./lib/index.d.ts",
    "lint": "yarn run lint:eslint",
    "lint:eslint": "yarn ../.. run eslint --quiet packages/pob-dependencies",
    "preversion": "node ./scripts/update-peerdeps.js && node ./scripts/generate.d.ts.js && git add lib/index.d.ts"
  },
  "pob": {},
  "prettier": "@pob/root/prettier-config",
  "devDependencies": {
    "@babel/core": "7.26.9",
    "@babel/preset-env": "7.26.9",
    "@babel/preset-react": "7.26.3",
    "@babel/runtime": "7.26.9",
    "@playwright/test": "1.50.1",
    "@pob/commitlint-config": "9.1.1",
    "@pob/esbuild": "4.0.0",
    "@pob/eslint-config": "59.7.0",
    "@pob/eslint-config-typescript": "59.7.0",
    "@pob/eslint-config-typescript-react": "59.7.0",
    "@pob/pretty-pkg": "12.0.0",
    "@pob/rollup-esbuild": "6.2.0",
    "@pob/rollup-typescript": "7.0.0",
    "@swc-node/register": "1.10.9",
    "@swc/core": "1.10.18",
    "@swc/jest": "0.2.37",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.5",
    "@vitest/coverage-v8": "3.0.6",
    "alp-rollup-plugin-config": "2.2.1",
    "check-package-dependencies": "10.0.0",
    "eslint": "9.20.1",
    "jest": "29.7.0",
    "jest-junit-reporter": "1.1.0",
    "pob-babel": "43.3.0",
    "prettier": "3.5.1",
    "repository-check-dirty": "10.0.0",
    "rollup": "4.33.0",
    "semver": "7.7.1",
    "ts-node": "npm:ts-node-lite@11.0.0-beta.1",
    "tslib": "2.8.1",
    "typedoc": "0.27.7",
    "typescript": "5.7.3",
    "vitest": "3.0.6"
  }
}
