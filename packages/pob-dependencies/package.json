{
  "name": "pob-dependencies",
  "version": "20.4.1",
  "description": "easier dependencies upgrade with a real package.json",
  "keywords": [],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/christophehurpeau/pob.git",
    "directory": "packages/pob-dependencies"
  },
  "homepage": "https://github.com/christophehurpeau/pob",
  "type": "module",
  "engines": {
    "node": ">=22.18.0"
  },
  "sideEffects": false,
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "yarn run build:definitions",
    "build:definitions": "tsc --lib esnext --noEmit --skipLibCheck ./lib/index.d.ts",
    "lint": "yarn run lint:eslint",
    "lint:eslint": "yarn ../.. run eslint --quiet packages/pob-dependencies",
    "preversion": "node ./scripts/update-peerdeps.js && node ./scripts/generate.d.ts.js && git add lib/index.d.ts"
  },
  "pob": {},
  "prettier": "@pob/root/prettier-config",
  "devDependencies": {
    "@babel/core": "7.28.5",
    "@babel/preset-env": "7.28.5",
    "@babel/preset-react": "7.28.5",
    "@babel/runtime": "7.28.4",
    "@playwright/test": "1.56.1",
    "@pob/esbuild": "5.1.0",
    "@pob/eslint-config": "62.0.0",
    "@pob/eslint-config-typescript": "62.0.0",
    "@pob/eslint-config-typescript-react": "62.0.0",
    "@pob/pretty-pkg": "13.1.0",
    "@pob/rollup-esbuild": "7.3.0",
    "@pob/rollup-typescript": "8.0.0",
    "@swc-node/register": "1.11.1",
    "@swc/core": "1.13.21",
    "@swc/jest": "0.2.39",
    "@types/jest": "30.0.0",
    "@types/node": "22.18.12",
    "@vitest/coverage-v8": "4.0.6",
    "alp-rollup-plugin-config": "3.0.0",
    "check-package-dependencies": "10.5.0",
    "eslint": "9.38.0",
    "jest": "30.2.0",
    "jest-junit-reporter": "1.1.0",
    "pinst": "3.0.0",
    "pob-babel": "44.4.1",
    "prettier": "3.6.2",
    "repository-check-dirty": "11.0.0",
    "rollup": "4.52.5",
    "semver": "7.7.3",
    "tslib": "2.8.1",
    "typedoc": "0.28.14",
    "typescript": "5.9.3",
    "vitest": "4.0.6"
  }
}
