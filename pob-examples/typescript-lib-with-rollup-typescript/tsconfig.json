{
  "extends": [
    "@pob/root/tsconfigs/strict.json",
    "@pob/root/tsconfigs/targets/rollup-node-18.json"
  ],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/definitions",
    "tsBuildInfoFile": "node_modules/.cache/tsc/tsbuildinfo",
    "noEmitOnError": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "incremental": true,
    "composite": true,

    "paths": {
      "@pob/rollup-typescript": ["../../@pob/rollup-typescript/lib"],
      "@pob/rollup-typescript/*": ["../../@pob/rollup-typescript/lib/*"]
    }
  }
}
