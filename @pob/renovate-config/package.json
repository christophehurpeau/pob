{
  "name": "@pob/renovate-config",
  "version": "2.3.1",
  "description": "renovate pob config",
  "engines": {
    "node": ">=12.10.0"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "preversion": "node generate-package.json.js && git add package.json"
  },
  "devDependencies": {
    "pob-dependencies": "^3.4.0",
    "prettier": "2.2.1"
  },
  "renovate-config": {
    "default": {
      "prConcurrentLimit": 10,
      "masterIssue": true,
      "masterIssueApproval": false,
      "postUpdateOptions": [
        "yarnDedupeFewer",
        "yarnDedupeHighest"
      ],
      "labels": [
        ":soon: automerge"
      ],
      "rangeStrategy": "bump",
      "packageRules": [
        {
          "groupName": "Pob Dependencies",
          "packageNames": [
            "@chrp/typedoc-plugin-lerna-packages",
            "pob-babel",
            "pob-lcov-reporter",
            "rollup",
            "semver",
            "standard-version",
            "typedoc"
          ],
          "schedule": [
            "before 3am on Friday"
          ]
        },
        {
          "packagePatterns": [
            "^@pob/eslint-config",
            "^@typescript-eslint/",
            "^eslint-"
          ],
          "updateTypes": [
            "major"
          ],
          "schedule": [
            "before 3am on Friday"
          ],
          "packageNames": [
            "eslint"
          ]
        },
        {
          "description": "eslint configs",
          "packagePatterns": [
            "^@pob/eslint-config",
            "^@typescript-eslint/",
            "^eslint-"
          ],
          "packageNames": [
            "eslint"
          ],
          "updateTypes": [
            "major"
          ]
        },
        {
          "description": "@pob eslint configs",
          "packagePatterns": [
            "^@pob/eslint-config"
          ],
          "packageNames": [
            "eslint"
          ],
          "updateTypes": [
            "patch",
            "minor"
          ]
        },
        {
          "packagePatterns": [
            "^@pob/eslint-config",
            "^@typescript-eslint/",
            "^eslint-",
            "^@babel/",
            "^babel-",
            "^@types/"
          ],
          "packageNames": [
            "eslint",
            "@pob/root",
            "@pob/commitlint-config",
            "@pob/pretty-pkg",
            "@pob/lerna-light",
            "husky",
            "prettier",
            "lerna",
            "typescript",
            "repository-check-dirty",
            "standard-version",
            "jest",
            "jest-junit-reporter"
          ],
          "updateTypes": [
            "patch",
            "minor"
          ],
          "labels": [
            ":ok_hand: code/approved",
            ":soon: automerge"
          ],
          "schedule": [
            "at any time"
          ]
        },
        {
          "updateTypes": [
            "pin"
          ],
          "labels": [
            ":ok_hand: code/approved",
            ":soon: automerge"
          ],
          "schedule": [
            "at any time"
          ]
        }
      ]
    }
  }
}
