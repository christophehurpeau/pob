{
  "name": "@pob/renovate-config",
  "version": "4.2.0",
  "description": "renovate pob config",
  "type": "module",
  "engines": {
    "node": ">=12.10.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "preversion": "node generate-package.json.js && git add package.json"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "devDependencies": {
    "pob-dependencies": "^5.6.0",
    "prettier": "2.4.1"
  },
  "renovate-config": {
    "default": {
      "prConcurrentLimit": 10,
      "masterIssue": true,
      "masterIssueApproval": false,
      "postUpdateOptions": [
        "yarnDedupeFewer",
        "yarnDedupeHighest"
      ],
      "labels": [
        ":vertical_traffic_light: automerge"
      ],
      "rangeStrategy": "bump",
      "packageRules": [
        {
          "depTypeList": [
            "dependencies",
            "peerDependencies"
          ],
          "updateTypes": [
            "major",
            "minor"
          ],
          "semanticCommitType": "feat"
        },
        {
          "groupName": "Pob Dependencies",
          "packageNames": [
            "@rollup/plugin-run",
            "pob-babel",
            "pob-lcov-reporter",
            "standard-version"
          ],
          "schedule": [
            "before 3am on Friday"
          ]
        },
        {
          "packagePatterns": [
            "^@typescript-eslint/",
            "^eslint-"
          ],
          "updateTypes": [
            "major"
          ],
          "schedule": [
            "before 3am on Friday"
          ],
          "packageNames": [
            "eslint"
          ]
        },
        {
          "packagePatterns": [
            "^@pob/eslint-config",
            "^@typescript-eslint/",
            "^eslint-",
            "^@babel/",
            "^@pob/",
            "^babel-",
            "^@types/",
            "^@rollup/"
          ],
          "packageNames": [
            "check-package-dependencies",
            "eslint",
            "prettier",
            "lerna",
            "rollup",
            "semver",
            "typescript",
            "typedoc",
            "repository-check-dirty",
            "standard-version",
            "jest",
            "jest-junit-reporter"
          ],
          "updateTypes": [
            "patch",
            "minor"
          ],
          "labels": [
            ":ok_hand: code/approved",
            ":vertical_traffic_light: automerge"
          ],
          "schedule": [
            "at any time"
          ]
        },
        {
          "description": "@pob eslint configs",
          "packagePatterns": [
            "^@pob/eslint-config"
          ]
        },
        {
          "updateTypes": [
            "pin"
          ],
          "labels": [
            ":ok_hand: code/approved",
            ":vertical_traffic_light: automerge"
          ],
          "schedule": [
            "at any time"
          ]
        }
      ]
    }
  }
}
