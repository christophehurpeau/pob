{
  "name": "@pob/renovate-config",
  "version": "5.14.1",
  "description": "renovate pob config",
  "type": "module",
  "engines": {
    "node": ">=14.17.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "preversion": "node generate-package.json.js && git add package.json"
  },
  "prettier": "@pob/root/prettier-config",
  "devDependencies": {
    "pob-dependencies": "7.4.0",
    "prettier": "2.8.3"
  },
  "renovate-config": {
    "default": {
      "prConcurrentLimit": 10,
      "masterIssue": true,
      "masterIssueApproval": false,
      "recreateClosed": true,
      "postUpdateOptions": [
        "yarnDedupeFewer",
        "yarnDedupeHighest"
      ],
      "labels": [
        ":vertical_traffic_light: automerge"
      ],
      "rangeStrategy": "bump",
      "assignees": [
        "christophehurpeau"
      ],
      "lockFileMaintenance": {
        "enabled": true
      },
      "stabilityDays": 4,
      "internalChecksFilter": "strict",
      "packageRules": [
        {
          "matchDepTypes": [
            "dependencies",
            "peerDependencies"
          ],
          "matchUpdateTypes": [
            "major",
            "minor"
          ],
          "semanticCommitType": "feat"
        },
        {
          "matchDepTypes": [
            "dependencies",
            "peerDependencies"
          ],
          "matchUpdateTypes": [
            "patch"
          ],
          "semanticCommitType": "fix",
          "packageNames": [
            "alp-rollup-plugin-config",
            "pob-babel",
            "rollup"
          ]
        },
        {
          "groupName": "Pob Dependencies",
          "packageNames": [
            "alp-rollup-plugin-config",
            "pob-babel"
          ],
          "schedule": [
            "before 3am on Friday"
          ]
        },
        {
          "packagePatterns": [
            "^@typescript-eslint/",
            "^eslint-"
          ],
          "updateTypes": [
            "major"
          ],
          "schedule": [
            "before 3am on Friday"
          ],
          "packageNames": [
            "eslint"
          ]
        },
        {
          "stabilityDays": 0,
          "packagePatterns": [
            "^@pob/eslint-config",
            "^@typescript-eslint/",
            "^eslint-",
            "^@babel/",
            "^@pob/",
            "^babel-",
            "^@types/",
            "^@rollup/"
          ],
          "packageNames": [
            "check-package-dependencies",
            "eslint",
            "prettier",
            "rollup",
            "semver",
            "typescript",
            "typedoc",
            "repository-check-dirty",
            "standard-version",
            "jest",
            "jest-junit-reporter"
          ],
          "updateTypes": [
            "patch",
            "minor"
          ],
          "addLabels": [
            ":ok_hand: code/approved"
          ],
          "schedule": [
            "at any time"
          ]
        },
        {
          "groupName": "@pob eslint configs",
          "stabilityDays": 0,
          "packagePatterns": [
            "^@pob/eslint-config"
          ]
        },
        {
          "groupName": "nightingale",
          "description": "nightingale monorepo",
          "stabilityDays": 0,
          "sourceUrlPrefixes": [
            "https://github.com/christophehurpeau/nightingale"
          ]
        },
        {
          "groupName": "alp",
          "description": "alp monorepo",
          "stabilityDays": 0,
          "sourceUrlPrefixes": [
            "https://github.com/christophehurpeau/alp"
          ]
        },
        {
          "groupName": "liwi",
          "description": "liwi monorepo",
          "stabilityDays": 0,
          "sourceUrlPrefixes": [
            "https://github.com/liwijs/liwi"
          ]
        },
        {
          "packageNames": [
            "@pob/root",
            "yarn"
          ],
          "stabilityDays": 0,
          "schedule": [
            "at any time"
          ]
        },
        {
          "packageNames": [
            "@pob/root",
            "yarn"
          ],
          "updateTypes": [
            "patch",
            "minor"
          ],
          "addLabels": [
            ":ok_hand: code/approved"
          ]
        },
        {
          "updateTypes": [
            "pin"
          ],
          "addLabels": [
            ":ok_hand: code/approved"
          ],
          "schedule": [
            "at any time"
          ]
        }
      ]
    }
  }
}
