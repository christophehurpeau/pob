{
  "name": "@pob/renovate-config",
  "version": "1.8.5",
  "description": "renovate pob config",
  "engines": {
    "node": ">= 8.3.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "preversion": "node generate-package.json.js && git add package.json"
  },
  "devDependencies": {
    "pob-dependencies": "^1.9.0",
    "prettier": "2.0.2"
  },
  "renovate-config": {
    "default": {
      "prConcurrentLimit": 10,
      "masterIssue": true,
      "masterIssueApproval": false,
      "postUpdateOptions": [
        "yarnDedupeHighest"
      ],
      "prBodyNotes": [
        "<!-- do not edit after this -->This will be auto filled by reviewflow.<!-- end - don't add anything after this -->"
      ],
      "labels": [
        ":soon: automerge"
      ],
      "packageRules": [
        {
          "groupName": "Pob Dependencies",
          "packageNames": [
            "@babel/core",
            "@babel/preset-env",
            "@babel/preset-react",
            "@babel/runtime",
            "@pob/commitlint-config",
            "@pob/eslint-config",
            "@pob/eslint-config-babel",
            "@pob/eslint-config-babel-node",
            "@pob/eslint-config-node",
            "@pob/eslint-config-react",
            "@pob/eslint-config-typescript",
            "@pob/eslint-config-typescript-react",
            "@pob/pretty-pkg",
            "@types/jest",
            "@typescript-eslint/eslint-plugin",
            "@typescript-eslint/parser",
            "babel-eslint",
            "babel-jest",
            "babel-preset-latest-node",
            "babel-preset-modern-browsers",
            "eslint",
            "eslint-plugin-jsx-a11y",
            "eslint-plugin-node",
            "eslint-plugin-prefer-class-properties",
            "eslint-plugin-prettier",
            "eslint-plugin-react",
            "eslint-plugin-react-hooks",
            "eslint-plugin-unicorn",
            "jest",
            "jest-junit-reporter",
            "lerna",
            "pob-babel",
            "pob-lcov-reporter",
            "pob-release",
            "prettier",
            "repository-check-dirty",
            "semver",
            "typedoc",
            "typescript"
          ],
          "schedule": [
            "before 3am on Friday"
          ]
        },
        {
          "description": "@pob eslint configs",
          "packagePatterns": [
            "^@pob/eslint-config"
          ]
        },
        {
          "packageNames": [
            "@pob/root",
            "husky",
            "prettier",
            "lerna"
          ],
          "updateTypes": [
            "patch",
            "minor"
          ],
          "labels": [
            ":ok_hand: code/approved",
            ":soon: automerge"
          ],
          "schedule": [
            "at any time"
          ]
        },
        {
          "updateTypes": [
            "pin"
          ],
          "labels": [
            ":ok_hand: code/approved",
            ":soon: automerge"
          ],
          "schedule": [
            "at any time"
          ]
        }
      ]
    }
  }
}
