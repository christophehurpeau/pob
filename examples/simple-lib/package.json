{
  "name": "example-simple-lib",
  "private": true,
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/christophehurpeau/pob.git",
    "directory": "examples/simple-lib"
  },
  "homepage": "https://github.com/christophehurpeau/pob",
  "type": "module",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "generate:test-coverage": "rm -Rf docs/coverage/ ; NODE_ENV=production NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageReporters=pob-lcov-reporter --coverageDirectory=docs/coverage/",
    "lint": "yarn run lint:eslint",
    "lint:eslint": "cd ../.. && yarn run eslint --report-unused-disable-directives --resolve-plugins-relative-to . --quiet examples/simple-lib",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "jest": {
    "cacheDirectory": "./node_modules/.cache/jest",
    "testMatch": [
      "<rootDir>/lib/**/__tests__/**/*.?(m)js",
      "<rootDir>/lib/**/*.test.?(m)js"
    ],
    "collectCoverageFrom": [
      "lib/**/*.?(m)js"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "extensionsToTreatAsEsm": [],
    "testEnvironment": "node"
  },
  "pob": {},
  "devDependencies": {
    "@types/jest": "27.0.3",
    "jest": "27.4.4",
    "pob-lcov-reporter": "5.5.0"
  }
}
