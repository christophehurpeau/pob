{
  "name": "pob-monorepo",
  "private": true,
  "description": "library generator/tools/scripts",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/pob.git",
  "homepage": "https://github.com/christophehurpeau/pob",
  "type": "module",
  "engines": {
    "node": ">=14.17.0"
  },
  "packageManager": "yarn@3.1.1",
  "workspaces": [
    "packages/*",
    "@pob/*",
    "examples/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --parallel --topological-dev -Av run build && yarn run build:definitions",
    "build:definitions": "tsc -b tsconfig.build.json",
    "checks": "node scripts/check-packages.js",
    "generate:test-coverage": "rm -Rf docs/coverage/ ; NODE_ENV=production BABEL_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageReporters=pob-lcov-reporter --coverageDirectory=docs/coverage/",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:eslint": "eslint --report-unused-disable-directives --resolve-plugins-relative-to . --quiet .",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "postinstall": "yarn node @pob/root/bin/pob-root-postinstall.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "tsc": "tsc -b",
    "watch": "yarn workspaces foreach --parallel --exclude \"*-example\" -Av run watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "jest": {
    "cacheDirectory": "./node_modules/.cache/jest",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testMatch": [
      "<rootDir>/(packages|@pob|examples)/*/(src|lib)/**/__tests__/**/*.(ts|js|cjs|mjs)",
      "<rootDir>/(packages|@pob|examples)/*/(src|lib)/**/*.test.(ts|js|cjs|mjs)"
    ]
  },
  "resolutions": {
    "npm-package-arg@8.1.2": "patch:npm-package-arg@npm:8.1.2#.yarn/patches/npm-package-arg-npm-8.1.2-1de2ee4bd8"
  },
  "resolutionsExplained": {
    "npm-package-arg@8.1.2": "patch to support yarn 'workspace:*'"
  },
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@pob/eslint-config": "48.0.5",
    "@pob/lerna-light": "workspace:*",
    "@pob/root": "workspace:*",
    "@types/jest": "27.0.3",
    "check-package-dependencies": "3.0.0",
    "eslint": "8.4.1",
    "jest": "27.4.5",
    "pob-babel": "workspace:*",
    "pob-lcov-reporter": "workspace:*",
    "prettier": "2.5.1",
    "typescript": "4.5.3"
  }
}
