{
  "name": "pob-monorepo",
  "private": true,
  "description": "library generator/tools/scripts",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/pob.git",
  "homepage": "https://github.com/christophehurpeau/pob",
  "type": "commonjs",
  "engines": {
    "node": ">=12.10.0"
  },
  "packageManager": "yarn@3.1.1",
  "workspaces": [
    "packages/*",
    "@pob/*",
    "examples/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --parallel --topological-dev -Av run build",
    "checks": "node scripts/check-packages.mjs",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:eslint": "eslint --report-unused-disable-directives --resolve-plugins-relative-to . --quiet .",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "postinstall": "yarn node @pob/root/bin/pob-root-postinstall.js",
    "test": "yarn workspaces foreach --parallel -Av run test",
    "watch": "yarn workspaces foreach --parallel --exclude \"*-example\" -Av run watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "devDependencies": {
    "@pob/eslint-config": "47.1.0",
    "@pob/lerna-light": "workspace:*",
    "@pob/root": "workspace:*",
    "check-package-dependencies": "2.2.1",
    "eslint": "7.32.0",
    "prettier": "2.5.1"
  }
}
