{
  "name": "pob-lerna",
  "private": true,
  "version": "0.0.0",
  "description": "library generator/tools/scripts",
  "keywords": [],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/pob.git",
  "homepage": "https://github.com/christophehurpeau/pob",
  "scripts": {
    "build": "lerna run --parallel --ignore \"*-example\" build",
    "generate:docs": "lerna run --parallel --ignore \"*-example\" generate:docs",
    "lint": "lerna run --stream lint",
    "preversion": "yarn run lint && yarn run build",
    "release": "GH_TOKEN=$POB_GITHUB_TOKEN lerna publish --conventional-commits --github-release -m 'chore: release'",
    "test": "lerna run --stream test",
    "watch": "lerna run --parallel --ignore \"*-example\" watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "post-checkout": "yarnhook",
      "post-merge": "yarnhook",
      "post-rewrite": "yarnhook",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "yarn-update-lock",
      "git add yarn.lock"
    ],
    "yarn.lock": [
      "yarn-update-lock",
      "git add"
    ],
    "{package.json,.eslintrc.json}": [
      "prettier --write",
      "git add"
    ],
    "lib/**/*.json": [
      "prettier --write",
      "git add"
    ],
    "lib/**/*.js": [
      "eslint --fix --quiet",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "husky": "1.3.1",
    "lerna": "3.13.0",
    "lint-staged": "8.1.4",
    "yarn-update-lock": "0.3.1",
    "yarnhook": "0.3.0"
  }
}
