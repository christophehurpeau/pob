{
  "name": "pob-monorepo",
  "private": true,
  "description": "library generator/tools/scripts",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "https://github.com:christophehurpeau/pob.git",
  "homepage": "https://github.com/christophehurpeau/pob",
  "engines": {
    "node": ">=12.10.0"
  },
  "workspaces": [
    "packages/*",
    "@pob/*"
  ],
  "scripts": {
    "checks": "node scripts/check-packages-dependencies.js",
    "lint": "eslint --ext js,ts,tsx .",
    "preversion": "yarn run lint && repository-check-dirty",
    "release": "cross-env GH_TOKEN=$POB_GITHUB_TOKEN lerna version --conventional-commits --conventional-graduate --create-release=github -m 'chore: release' && lerna publish from-git",
    "test": "lerna run --stream test"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "devDependencies": {
    "@pob/eslint-config": "40.0.0",
    "@pob/eslint-config-node": "40.0.0",
    "eslint": "7.9.0",
    "husky": "4.3.0",
    "lerna": "3.22.1",
    "prettier": "2.1.2"
  }
}
