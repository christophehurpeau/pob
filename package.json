{
  "name": "pob-lerna",
  "private": true,
  "version": "0.0.0",
  "description": "library generator/tools/scripts",
  "keywords": [],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "git@github.com:christophehurpeau/pob.git",
  "homepage": "https://github.com/christophehurpeau/pob",
  "scripts": {
    "build": "lerna run --parallel --ignore \"*-example\" build",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "generate:docs": "lerna run --parallel --ignore \"*-example\" generate:docs",
    "lint": "lerna run --stream lint",
    "postcheckout": "yarnhook",
    "postmerge": "yarnhook",
    "postrewrite": "yarnhook",
    "postinstall": "lerna link",
    "precommit": "lint-staged",
    "preversion": "yarn run lint && yarn run build && yarn run generate:docs",
    "release": "lerna publish --conventional-commits -m 'chore: release'",
    "test": "lerna run --stream test",
    "watch": "lerna run --parallel --ignore \"*-example\" watch"
  },
  "lint-staged": {
    "{package.json,.eslintrc.json}": [
      "prettier --write",
      "git add"
    ],
    "lib/**/*.json": [
      "prettier --write",
      "git add"
    ],
    "lib/**/*.js": [
      "eslint --fix --quiet",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "babel-plugin-pob-babel": "file:packages/babel-plugin-pob-babel",
    "babel-preset-pob-env": "file:packages/babel-preset-pob-env",
    "pob": "file:packages/pob",
    "pob-babel": "file:packages/pob-babel",
    "pob-release": "file:packages/pob-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "husky": "^0.14.3",
    "lerna": "3.0.1",
    "lint-staged": "^7.2.0",
    "yarnhook": "^0.3.0"
  }
}
