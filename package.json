{
  "name": "pob-monorepo",
  "private": true,
  "description": "library generator/tools/scripts",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/pob.git",
  "homepage": "https://github.com/christophehurpeau/pob",
  "type": "module",
  "engines": {
    "node": ">=14.17.0"
  },
  "packageManager": "yarn@3.5.0",
  "workspaces": [
    "packages/*",
    "@pob/*",
    "pob-examples/*"
  ],
  "scripts": {
    "build": "yarn clean:build && rollup --config rollup.config.mjs && yarn run build:definitions",
    "build:definitions": "tsc -b",
    "checks": "node scripts/check-packages.js",
    "clean:build": "yarn workspaces foreach --parallel -A run clean:build",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:eslint": "NODE_OPTIONS=--max_old_space_size=4096 eslint --report-unused-disable-directives --resolve-plugins-relative-to . --quiet .",
    "lint:prettier": "pob-root-prettier --check .",
    "lint:prettier:fix": "pob-root-prettier --write .",
    "postinstall": "yarn node @pob/root/bin/pob-root-postinstall.cjs",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "tsc": "tsc -b",
    "version": "YARN_ENABLE_IMMUTABLE_INSTALLS=false yarn && git add yarn.lock",
    "watch": "yarn clean:build && rollup --config rollup.config.mjs --watch"
  },
  "prettier": "@pob/root/prettier-config",
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "jest": {
    "cacheDirectory": "./node_modules/.cache/jest",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testMatch": [
      "<rootDir>/@(packages|@pob|pob-examples)/*/@(src|lib)/**/__tests__/**/*.(ts|js|cjs|mjs)",
      "<rootDir>/@(packages|@pob|pob-examples)/*/@(src|lib)/**/*.test.(ts|js|cjs|mjs)"
    ]
  },
  "resolutions": {
    "npm-package-arg@8.1.2": "patch:npm-package-arg@npm:8.1.2#.yarn/patches/npm-package-arg-npm-8.1.2-1de2ee4bd8"
  },
  "resolutionsExplained": {
    "npm-package-arg@8.1.2": "patch to support yarn 'workspace:*'"
  },
  "devDependencies": {
    "@babel/core": "7.21.3",
    "@pob/eslint-config": "50.0.4",
    "@pob/lerna-light": "workspace:*",
    "@pob/root": "workspace:*",
    "@types/jest": "29.5.0",
    "check-package-dependencies": "6.3.1",
    "eslint": "8.37.0",
    "jest": "29.5.0",
    "pob-babel": "workspace:*",
    "prettier": "2.8.7",
    "react": "18.2.0",
    "typescript": "4.9.5"
  }
}
